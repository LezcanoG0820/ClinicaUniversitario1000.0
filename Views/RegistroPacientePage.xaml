<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="ClinicaUniversitaria.Views.RegistroPacientePage"
                Title="Registro de Paciente">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Registro de Paciente" 
                      FontSize="24" 
                      HorizontalOptions="Center" />

            <Entry x:Name="NombreEntry" 
                      Placeholder="Nombre Completo" />

            <Entry x:Name="IdentificacionEntry" 
                      Placeholder="Identificación" 
                      Keyboard="Numeric" />

            <Entry x:Name="ContactoEntry" 
                      Placeholder="Contacto (Teléfono o Email)" 
                      Keyboard="Telephone" />

            <Editor x:Name="HistorialMedicoEditor" 
                       Placeholder="Historial Médico (Opcional)" 
                       HeightRequest="100" />

            <Button Text="Registrar Paciente" 
                       Clicked="OnRegistrarClicked" 
                       BackgroundColor="#007AFF" 
                       TextColor="White" />

        </StackLayout>
    </ScrollView>
</ContentPage>