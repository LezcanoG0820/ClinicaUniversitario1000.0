<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="ClinicaUniversitaria.MainPage"
                Title="Clínica Universitaria">
    <StackLayout Padding="20" Spacing="20">
        <Label Text="Bienvenido a la Clínica Universitaria" 
                  FontSize="24" 
                  HorizontalOptions="Center" />

        <Button Text="Registrar Nuevo Paciente" 
                   Clicked="OnRegistrarPacienteClicked" 
                   BackgroundColor="#007AFF" 
                   TextColor="White" />

        <Button Text="Ver Lista de Pacientes" 
                   Clicked="OnVerListaPacientesClicked" 
                   BackgroundColor="#34C759" 
                   TextColor="White" />
    </StackLayout>
</ContentPage>
